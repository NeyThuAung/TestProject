<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shopdoora_primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShopDooraDashBoardFragment">

    <TextView
        android:id="@+id/tvTodayReportTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ယနေ့အတွက် အစီရင်ခံစာ"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llTodayReport"
        app:layout_constraintTop_toBottomOf="@id/tvTodayReportTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#000000"
                    android:alpha="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/ivNewUser"
                        android:src="@color/text_black_color"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvNewUserCount"
                        android:text="233"
                        android:layout_marginVertical="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvNewUserTitle"
                        android:text="အသုံးပြုသူအသစ်"
                        android:textSize="12sp"
                        android:fontFamily="@font/pyidaungsu_regular"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="2.5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#000000"
                    android:alpha="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/ivOnlineUser"
                        android:src="@color/text_black_color"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvOnlineCount"
                        android:text="233"
                        android:layout_marginVertical="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvOnlineTitle"
                        android:text="အွန်လိုင်း"
                        android:textSize="12sp"
                        android:fontFamily="@font/pyidaungsu_regular"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#000000"
                    android:alpha="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/ivPointHistory"
                        android:src="@color/text_black_color"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvPointHistoryCount"
                        android:text="233"
                        android:layout_marginVertical="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvPointHistoryTitle"
                        android:text="ပွိုင့်စာရင်း"
                        android:textSize="12sp"
                        android:fontFamily="@font/pyidaungsu_regular"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMemberHistory"
        app:layout_constraintTop_toBottomOf="@id/llTodayReport"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_top_radius"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tvPointHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:text="ပွိုင့်မှတ်တမ်း"
            android:fontFamily="@font/pyidaungsu_regular"
            android:textSize="16sp"
            android:textColor="@color/shopdoora_primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSeeMorePointHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPointHistory"
            app:layout_constraintBottom_toBottomOf="@id/tvPointHistory"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="ထပ်ကြည့်ရန်"
            android:textSize="12sp"
            android:textColor="@color/text_grey_color"
            android:fontFamily="@font/pyidaungsu_regular"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/viewTop"
            app:layout_constraintTop_toBottomOf="@id/tvPointHistory"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:background="@color/view_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recPointHistory"
            app:layout_constraintTop_toBottomOf="@id/viewTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/point_history_item_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>